<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/player_grey">

    <TextView
        android:id="@+id/popup_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/popup_choice"/>

    <RelativeLayout
        android:id="@+id/popup_re"
        android:layout_width="180dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/popup_left"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/player_green"
            android:text="@string/H246"/>

        <TextView
            android:id="@+id/popup_right"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/player_white"
            android:layout_toRightOf="@+id/popup_left"
            android:text="@string/H265"/>
    </RelativeLayout>

</LinearLayout>